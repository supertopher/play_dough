%nav
  %span.white_bar
  %span.white_bar
  %span.white_bar
  %span.white_bar
  = link_to 'PlayDough', root_path, class: "logo"
  %span{class: "right_side_nav_links"}
    - if user_signed_in?
      = link_to 'Assignments', challenges_path
      = link_to 'Create Event', new_event_path
      = link_to 'Create Phase', new_phase_path
      = link_to('Logout', destroy_user_session_path, :method => :delete)
    - else
      = form_tag user_session_path do
        Log In
        = text_field_tag 'user[email]', nil,  :placeholder => 'E-Mail'
        = password_field_tag 'user[password]', nil, placeholder: 'Password'
        %button Sign in
        = check_box_tag 'user[remember_me]'
        = label_tag 'user[remember_me]', 'Remember me'
        %span.lost_password
          = link_to "Password lost?", new_password_path('user')
