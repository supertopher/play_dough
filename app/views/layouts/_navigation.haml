%nav
  %span.white_bar
  %span.white_bar
  %span.white_bar
  %span.white_bar
  .logo= link_to 'PlayDough', root_path, class: "logo"
  .logged_in_name= "Logged in as #{current_user.email}" if current_user
  %span{class: "right_side_nav_links"}
    - if current_user
      = link_to 'Challenges ', challenges_path
        - if current_user.staff == true
        = link_to 'Create Event ', new_event_path
        = link_to 'Phases ', phases_path
        = link_to 'Cohorts ', cohorts_path
      = link_to('Logout', destroy_user_session_path, :method => :delete)
    - else
      = form_tag user_session_path do
        Log In
        = text_field_tag 'user[email]', nil,  :placeholder => 'E-Mail'
        = password_field_tag 'user[password]', nil, placeholder: 'Password'
        %button.front_sign_in_button Sign in
        = check_box_tag 'user[remember_me]'
        = label_tag 'user[remember_me]', 'Remember me'
        %span.lost_password
          = link_to "Password lost?", new_password_path('user')
