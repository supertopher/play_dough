<table class="day_picker">
  <% (1..3).each do |week_num| %>
  <tr>
    <th>Week <%= week_num %></th>
    <td>
      <% (1..7).each do |day_num| %>
      <%= check_box "week", [week_num, day_num] %> <%= day_of_week_name(day_num) %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<p>Start Time</p>

<%= time_select(:event_time, :start_time, {:minute_step => 15, ampm: true, :default => {:hour => '9', :minute => '00'}}) %>


<p>End Time</p>

<%= time_select(:event_time, :end_time, {:minute_step => 15, ampm: true, :default => {:hour => '10', :minute => '00'}}) %>